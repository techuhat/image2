# Environment Configuration for PDF Tools Backend
# Copy this to .env and update values as needed

# Server Configuration
HOST=0.0.0.0
PORT=5000
FLASK_ENV=production
FLASK_DEBUG=false

# File Upload Limits
MAX_CONTENT_LENGTH=104857600  # 100MB in bytes

# Cache Configuration
CACHE_DIR=cache
TEMP_DIR=temp
LOGS_DIR=logs

# System Dependencies (for health checks)
LIBREOFFICE_PATH=/usr/bin/libreoffice
GHOSTSCRIPT_PATH=/usr/bin/gs

# Security (optional)
SECRET_KEY=your-secret-key-here

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Performance Tuning
GUNICORN_WORKERS=4
GUNICORN_TIMEOUT=300
GUNICORN_MAX_REQUESTS=1000

# Compression Settings
DEFAULT_PDF_QUALITY=medium
COMPRESSION_THRESHOLD=1048576  # 1MB
